<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.threetier.mapper.TagMapper">
    <insert id="insert">
        insert into tbl_tag(tag_name, post_id)
        values(#{tagName}, #{postId})
    </insert>

    <select id="selectAllByPostId">
        select id, tag_name, post_id
        from tbl_tag
        where post_id = #{id}
    </select>

    <select id="selectAll">
        select distinct tag_name
        from tbl_tag
    </select>

    <delete id="delete">
        delete from tbl_tag
        where id = #{id}
    </delete>

    <delete id="deleteByPostId">
        delete from tbl_tag
        where post_id = #{id}
    </delete>
</mapper>
















